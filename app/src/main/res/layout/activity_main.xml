<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/app_name"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/operators"
            android:layout_alignStart="@+id/operators"
            android:layout_alignEnd="@+id/operators"
            android:textAlignment="center" />

        <Button
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_back"
            android:padding="20dp"
            android:text="Play"
            android:textColor="#ff333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/intro"
            android:layout_alignStart="@+id/intro"
            android:layout_alignEnd="@+id/intro" />

        <Button
            android:id="@+id/high_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_back"
            android:padding="20dp"
            android:text="High Scores"
            android:textColor="#ff333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/help_btn"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/help_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_back"
            android:padding="20dp"
            android:text="How to Play"
            android:textColor="#ff333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/play_btn"
            android:layout_alignEnd="@+id/intro" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_back"
            android:padding="20dp"
            android:id="@+id/toggleButton"
            android:textColor="#ff333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/high_btn"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/operators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="operators"
            android:padding="5dp"
            android:src="@drawable/operators"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</ScrollView>